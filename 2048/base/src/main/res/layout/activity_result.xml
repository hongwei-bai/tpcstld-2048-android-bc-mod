<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="40dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="You win!"
        android:textAlignment="center"
        android:textColor="@color/text_black"
        android:textSize="28sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:text="You have earned 320 points from this game."
        android:textAlignment="center"
        android:textColor="@color/text_black"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:text="Now your have 8976 points!"
        android:textAlignment="center"
        android:textColor="@color/text_black"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:text="You can trade your points to money!"
        android:textAlignment="center"
        android:textColor="@color/text_black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_trade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:background="@color/text_brown"
        android:padding="8dp"
        android:text="Trade"
        android:textAllCaps="false"
        android:textColor="@color/text_black"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:text="Or continue playing games"
        android:textAlignment="center"
        android:textColor="@color/text_black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:background="@color/text_brown"
        android:padding="8dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/text_black"
        android:textSize="18sp" />
</LinearLayout>